  "keywords": [
    "typescript",
    "types",
    "python-learning-portal",
    "microservice",
    "contracts"
  ],
  "author": "Python Learning Portal Team",
  "license": "MIT",
  "homepage": "https://github.com/dstorey87/python-portal-types#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/dstorey87/python-portal-types.git"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
